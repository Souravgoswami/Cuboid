<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Price</th>
			<th>Features</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @products.each do |product| %>
			<tr>
				<td><%= product.title %></td>
				<td><%= product.description %></td>
				<td><%= product.price %></td>
				<td><%= product.features %></td>
				<td><%= link_to 'Show', product %></td>
				<td><%= link_to 'Edit', edit_product_path(product) %></td>
				<td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>

<div class="container-fluid" id="contents px-0">
	<div id="head-wrap">
		<div id="heading">
			Welcome to Cuboid...%-%Your Digital Computer Store...%-%We Offer High Quality Products...
		</div>
		<span id="caret">|</span>
	</div>

	<%# <%= cart_has_items %>

	<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
		<ol class="carousel-indicators">
			<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
			<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
			<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
			<li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
			<li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
			<li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
		</ol>

		<div class="carousel-inner">
			<div class="carousel-item active">
				<%= image_tag 'carousel-images/1.jpg', class: 'd-block w-100' %>
			</div>

			<div class="carousel-item">
				<%= image_tag 'carousel-images/2.jpg', class: 'd-block w-100' %>
			</div>

			<div class="carousel-item">
				<%= image_tag 'carousel-images/3.jpg', class: 'd-block w-100' %>
			</div>

			<div class="carousel-item">
				<%= image_tag 'carousel-images/4.jpg', class: 'd-block w-100' %>
			</div>

			<div class="carousel-item">
				<%= image_tag 'carousel-images/5.jpg', class: 'd-block w-100' %>
			</div>

			<div class="carousel-item">
				<%= image_tag 'carousel-images/6.jpg', class: 'd-block w-100' %>
			</div>
		</div>

		<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>

		<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>

	<div class="separator-wrapper">
		<div class="separator">
			Hot Sales
		</div>
	</div>

	<%# Items Card %>
	<div id="item-thumbnails">
		<div class="row">
			<% @products.each do |x| %>
				<div class="col-sm-6 col-md-4 mb-4">
					<div class="card">
						<%= link_to x do %>
							<div class="img-hover-effect">
								<div class="img-hover-label">
									<i class="fas fa-info-circle"></i>
									More Info
								</div>

								<% if x.thumbnail.url %>
									<%= image_tag x.thumbnail.url, class: 'card-img-top' %>
								<% else %>
									<div class="no-img-label">No Preview Available!</div>
								<% end %>
							</div>
						<% end %>

						<div class="card-body">
							<h5 class="card-title"><%= x.title %></h5>
							<p class="card-text"><%= x.description.to_s %></p>
							<p class="card-text">
								<%= format_tags(x, 'tags:').html_safe %>
							</p>
							<a href="#" class="btn-outline-primary-animated" data-content="Add to Cart"></a>
							<a href="#" class="btn-outline-success-animated" data-content="Checkout"></a>
							<a href="#" class="btn-outline-warning-animated" data-content="Buy Later"></a>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>

	<center>
		<ul class="pagination pagination-lg">
			<li class="page-item">
				<a href="#" aria-label="Previous" class="page-link">
					<span aria-hidden="true">&laquo;</span>
				</a>
			<li>

			<li class="page-item"><a href="#" class="page-link">1</a></li>
			<li class="page-item"><a href="#" class="page-link">2</a></li>
			<li class="page-item"><a href="#" class="page-link">3</a></li>
			<li class="page-item"><a href="#" class="page-link">4</a></li>
			<li class="page-item"><a href="#" class="page-link">5</a></li>

			<li class="page-item">
				<a href="#" aria-label="Next" class="page-link">
					<span aria-hidden="true">&raquo;</span>
				</a>
			<li>
		</ul>
	</center>
</div>

<%= javascript_pack_tag 'home_body.js' %>

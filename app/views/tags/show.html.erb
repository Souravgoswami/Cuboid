<div id="tags-carousel" class="carousel slide" data-ride="carousel">
	<ol class="carousel-indicators">
		<% @lucky_items.count.times do |i| %>
			<li data-target="#tags-carousel" data-slide-to="<%= i %>" class="<%= i == 0 ? 'active' : '' %>"></li>
		<% end %>
	</ol>

	<div class="carousel-inner">
		<% @lucky_items.map(&:product).each.with_index do |product, i| %>
			<div class="carousel-item <%= i == 0 ? 'active' : '' %>">
				<%= image_tag product.thumbnail.url.to_s, class: 'd-block w-100' %>
			</div>
		<% end %>
	</div>

	<a class="carousel-control-prev" href="#tags-carousel" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>

	<a class="carousel-control-next" href="#tags-carousel" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>

</div>

<div class="separator-wrapper">
	<div class="separator">
		Hot Sales
	</div>
</div>

<div id="item-thumbnails">
	<div class="row">
		<%= render partial: 'shared/tagged_products.html.erb', collection: @tags, as: :tag %>
	</div>
</div>
